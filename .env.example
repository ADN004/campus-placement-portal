# Docker Compose Environment Variables

# Database Configuration
DB_NAME=campus_placement_portal
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_PORT=5432

# Backend Configuration
NODE_ENV=production
BACKEND_PORT=5000
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d
JWT_COOKIE_EXPIRE=7

# Frontend Configuration
FRONTEND_PORT=80
FRONTEND_URL=http://localhost
VITE_API_URL=http://localhost:5000/api

# Super Admin Setup (for database seeding)
# Used when running: docker-compose exec backend node scripts/seedDatabase.js
SETUP_SECRET_KEY=your-secret-setup-key-change-in-production
CREATE_SUPER_ADMIN=false
SUPER_ADMIN_EMAIL=
SUPER_ADMIN_PASSWORD=
