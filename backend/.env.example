# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=campus_placement_portal
DB_USER=postgres
DB_PASSWORD=your_postgres_password

# JWT Configuration
# CRITICAL: Generate a strong random secret for production!
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
# Must be at least 64 characters for production security
JWT_SECRET=your_super_secret_jwt_key_minimum_64_characters_CHANGE_THIS_IN_PRODUCTION_use_crypto_randomBytes
JWT_EXPIRE=7d
JWT_COOKIE_EXPIRE=7

# Frontend URL (for CORS and email verification links)
# Local development: http://localhost:5173
# Production: Support multiple origins separated by commas
# Example: https://your-domain.com,https://www.your-domain.com
# Note: Do NOT include trailing slashes
FRONTEND_URL=http://localhost:5173

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Cloudinary Configuration (Sign up at https://cloudinary.com to get credentials)
CLOUDINARY_CLOUD_NAME=your_cloud_name_here
CLOUDINARY_API_KEY=your_api_key_here
CLOUDINARY_API_SECRET=your_api_secret_here

# Email Configuration (for email verification - using Nodemailer)
# For Gmail: Enable 2FA and generate an App Password
# https://support.google.com/accounts/answer/185833
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here
EMAIL_FROM=State Placement Cell <your_email@gmail.com>

# Super Admin Setup (for database seeding)
# SETUP_SECRET_KEY: Required in production to verify eligibility before creating super admin
# Generate a strong key: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SETUP_SECRET_KEY=your-secret-setup-key-change-in-production

# For automated/CI-CD deployments (non-interactive mode):
# Set CREATE_SUPER_ADMIN=true and provide credentials below
CREATE_SUPER_ADMIN=false
SUPER_ADMIN_EMAIL=
SUPER_ADMIN_PASSWORD=

# IMPORTANT: For production deployment
# 1. Set FRONTEND_URL to your production domain
# 2. Update email verification links will use this URL
# 3. Ensure CORS is properly configured for your domain
# 4. Change SETUP_SECRET_KEY to a secure random value